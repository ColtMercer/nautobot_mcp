# Nautobot Configuration
NAUTOBOT_URL=http://nautobot:8080
NAUTOBOT_TOKEN=your_nautobot_api_token_here

# OpenAI Configuration (Optional - for enhanced LLM capabilities)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Database Configuration
POSTGRES_DB=nautobot
POSTGRES_USER=nautobot
POSTGRES_PASSWORD=nautobot

# MongoDB Configuration
MONGO_URI=mongodb://mongo:27017
MONGO_DB=nautobot_mcp

# MCP Server Configuration
MCP_SERVERS=["mcp-nautobot"]
MCP_API_KEY=dev-mcp-key

# MCP Server Settings
HOST=0.0.0.0
PORT=7001
LOG_LEVEL=info

# GraphQL Configuration
GRAPHQL_PATH=/api/graphql/

# Debug Mode
DEBUG=true
